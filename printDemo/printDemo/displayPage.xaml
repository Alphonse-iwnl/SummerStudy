<Page x:Class="printDemo.displayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:printDemo"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="displayPage">


    <Grid Name="displayGrid" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Margin="10">
            <ScrollViewer Name="displayScro"  ScrollChanged="displayScro_ScrollChanged" >
                <TextBlock Name="displayTb"  
                           TextWrapping="Wrap">
                </TextBlock>
            </ScrollViewer>
        </Grid>
    </Grid>

</Page>
